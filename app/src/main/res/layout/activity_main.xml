<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zahpc.kiibod.MainActivity"
    android:background="@drawable/woodenbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/radio_rack"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonrounded"
        android:backgroundTint="@android:color/white">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_music_note_24"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"/>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piano "
                android:id="@+id/radio_piano"
                android:background="@drawable/buttonrounded"
                android:backgroundTint="#3F51B5"/>

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marimba "
                android:layout_marginStart="10dp"
                android:id="@+id/radio_marimba"
                android:background="@drawable/buttonrounded"
                android:backgroundTint="#3F51B5"/>

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamonica "
                android:layout_marginStart="10dp"
                android:id="@+id/radio_hamonica"
                android:background="@drawable/buttonrounded"
                android:backgroundTint="#3F51B5"/>

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comb "
                android:layout_marginStart="10dp"
                android:id="@+id/radio_comb"
                android:background="@drawable/buttonrounded"
                android:backgroundTint="#3F51B5"/>

        </RadioGroup>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_music_note_24"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/down"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radio_rack"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="2dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="#000"
            >

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"

                android:background="#ffff"
                android:id="@+id/button1"
                android:text="C"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                />

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"

                android:background="#ffff"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/button2"
                android:text="D"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:background="#ffff"
                android:id="@+id/button3"
                android:text="E"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="F"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                android:id="@+id/button4"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:text="G"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/button5"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/button6"
                android:text="A"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:text="B"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/button7"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:text="C"
                android:textColor="#000"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/button8"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
